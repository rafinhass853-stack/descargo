{
  "expo": {
    "name": "descargo-app",
    "slug": "descargo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rafaelaraujo2025.descargoapp",
      "config": {
        "googleMapsApiKey": "AIzaSyDT5OptLHwnCVPuevN5Ie8SFWxm4mRPAl4"
      },
      "infoPlist": {
        "UIBackgroundModes": ["location", "audio"],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "O app precisa acessar sua localização para navegação em primeiro e segundo plano.",
        "NSLocationWhenInUseUsageDescription": "O app precisa acessar sua localização para navegação."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.rafaelaraujo2025.descargoapp",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDT5OptLHwnCVPuevN5Ie8SFWxm4mRPAl4"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9804dc4f-74fc-4fee-b59f-6ac0ef95f83e"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "O app precisa acessar sua localização para navegação mesmo em segundo plano.",
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true
        }
      ]
    ]
  }
}
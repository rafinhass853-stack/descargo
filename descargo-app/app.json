{
  "expo": {
    "name": "descargo-app",
    "slug": "descargo-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rafaelaraujo2025.descargoapp",
      "config": {
        "googleMapsApiKey": "AIzaSyDT5OptLHwnCVPuevN5Ie8SFWxm4mRPAl4"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.rafaelaraujo2025.descargoapp",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "WAKE_LOCK"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyDT5OptLHwnCVPuevN5Ie8SFWxm4mRPAl4"
        }
      },
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9804dc4f-74fc-4fee-b59f-6ac0ef95f83e"
      }
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysPermission": "O app precisa acessar sua localização para rastreamento de carga mesmo em segundo plano.",
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ]
  }
}